<article class="post-single-bootcamp">
    <div class="title">
        <a href="{{post.bootcamp_url}}" target="_blank">{{bootcamp.title}}</a>
        <spam>({{post.bootcamp_url}})</spam>
    </div>
<div class="bootcamp-post-info">
    by {{post.user.username}} on {{post.created_at}}
    |
    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
</div>
</article>

<form class="feedback-form">
    <div>
        <textarea name="feedback-body"></textarea>
    </div>

    <div>
        <button type="add-feedback-btn">add feedback</button>
    </div>
</form>

<div class="feedback">
    {{#each post.comments}}
    <section class="feedback-comments">
        <div class="meta">
            {{user.username}} on {{created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>