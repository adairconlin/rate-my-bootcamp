<section class="all-background border shadow">
    <article>
        <div class="single-title-div">
            <a href="/bootcamp/{{id}}" target="_blank" class="title main-b">{{bootcamp.name}}</a>
        </div>
    </article>

    <div class="feedback">
        {{#each bootcamp.feedbacks}}
        <section class="feedback-reviews">
            <div class="paragraph main-b feedback-text">
                <div>"{{review_text}}"</div>
                <div>Rating: {{rating}}/10</div>
            </div>
            <div class="meta subtext accent-b">
            by {{user.username}} on {{created_at}}
            </div>
        </section>
        {{/each}}
    </div>
</section>

<!-- check if logged in to leave review -->
{{#if loggedIn}}
<form class="feedback-form">
    <div>
        <textarea name="feedback-body"></textarea>
    </div>

    <div>
        <button type="add-feedback-btn">add feedback</button>
    </div>
</form>
<script src="/javascript/add-feedback.js"></script>
{{/if}}
