<div>
    <a href="/bootcamps">
        <button >View All Bootcamps</button>
    </a>
    <a href="/instructors">
        <button>View All Instructors</button>
    </a>
</div>

<h3>Top Bootcamps</h3>
<ol>
    {{#each topBootcamps}}
    {{#if bootcamp_id}}
    <li>
        <a href="/bootcamp/{{id}}">
            <p>{{"bootcamp.name"}} - Avg Rating: {{avg_camp_rating}}/10</p>
        </a>
    </li>
    {{/if}}
    {{/each}}
</ol>

<h3>Top Instructors</h3>
<ol>
    {{#each topInstructors}}
    {{#if instructor_id}}
    <li>
        <a href="instructor/{{id}}">
            <p>{{"instructor.name"}} - Avg Rating: {{avg_instructor_rating}}/10</p>
        </a>
        <p>{{"instructor.bootcamp.name"}}</p>
    </li>
    {{/if}}
    {{/each}}
</ol>

