<section class="review">
    <div class="name-rating">
        <h3>
            <a href="/instructor-review/{{id}}">{{instructor.name}}</a>
            <span>from {{bootcamp.name}}</span>
            <span>with a {{rating}} rating</span>
        </h3>
    </div>
    <div class="review-text">
        {{review_text}}
    </div>
    <div class="timestamp">
        {{created_at}} by Anonymous
    </div>
</section>